<div id="technique_index">
  <dl class="tabs" data-tab>
    <dd class="active"><a href="#panel1">Dry Techniques</a></dd>
    <dd><a href="#panel2">Wet Techniques</a></dd>
  </dl>

  <div class="tabs-content">
  <div class="content active" id="panel1">
    <table>
      <thead>
        <tr>
          <th><h3>Name</h3></th>
          <th><h3>Description</th>
          <th><h3>Equipment Needed:</th></h3>
        </tr>
      </thead>

      <tbody>
        <% @dry.each do |technique| %>
          <tr>
            <td><%= link_to technique.name.capitalize, technique %></td>
            <td><%= technique.description %></td>
            <td><%= technique.equipment %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>

  <div class="content" id="panel2">
    <table>
      <thead>
        <tr>
          <th>Name</th>
          <th>Description</th>
          <th>Equipment</th>
        </tr>
      </thead>

      <tbody>
        <% @wet.each do |technique| %>
          <tr>
            <td><%= link_to technique.name.capitalize, technique %></td>
            <td><%= technique.description %></td>
            <td><%= technique.equipment %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
