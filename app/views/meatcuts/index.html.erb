<h1>Listing meatcuts</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Animal</th>
      <th>Primal</th>
      <th>Description</th>
      <th>Alt names</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @meatcuts.each do |meatcut| %>
      <tr>
        <td><%= meatcut.name %></td>
        <td><%= meatcut.animal %></td>
        <td><%= meatcut.primal %></td>
        <td><%= meatcut.description %></td>
        <td><%= meatcut.alt_names %></td>
        <td><%= link_to 'Show', meatcut %></td>
        <td><%= link_to 'Edit', edit_meatcut_path(meatcut) %></td>
        <td><%= link_to 'Destroy', meatcut, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

